{{#each blogs}}
<div class="card">
   <a id="{{id}}" data-bs-toggle="tooltip" data-bs-placement="top" title="click title to add comment"><div class="card-header commentPost">
    <span>Title: </span> {{title}}
  </div></a>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><span>Content: </span>{{content}}</p>
       <i class='far fa-comment' style='font-size:24px'></i>
      <footer class="blockquote-footer">Creation Date: <cite title="Source Title">{{createdDate}}</cite></footer>
    </blockquote>
  </div>
</div>
 {{/each}}


